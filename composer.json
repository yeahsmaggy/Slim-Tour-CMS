{
    "require": {
        "php": ">=5.5.0",
        "twig/twig": "1.*",
        "slim/slim": "3.*" ,
        "slim/php-view": "^2.0",
         "cartalyst/sentry": "2.0.*",
        "illuminate/database": "4.0.*",
        "ircmaxell/password-compat": "1.0.*",
		"vlucas/phpdotenv": "^2.4",
		"gabordemooij/redbean": "^5.1",
		"monolog/monolog": "^1.23",
        "slim/twig-view": "^2.4"
    },
     "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Src\\": "src"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
